<main>
    <div class="fluid-container">
        <div class="row mx-auto">
            <div class="col-xl-2">
                <!-- Left column, empty for now -->
            </div>
            <div class="col-xl-8">
                <div class="card mx-md-0 mx-3 my-3">
                    <div class="card-body">
                        <form action="/posts/<%= sharedPost._id %>/share" method="POST" id="sharePostForm" onsubmit="return postValidation()">
                            <div class="row">
                                <div class="col-xl-10">
                                    <h5>Share this post</h5>
                                    <div class="input-group">
                                        <textarea class="form-control" name="postText" id="txtPostText" placeholder="Say something about this post..."></textarea>
                                    </div>
                                    <div>
                                        <span id="char-count">0</span>
                                        <span>/ 280 characters</span>
                                    </div>
                                    <div class="input-group">
                                        <input name="postHashtags" id="txtPostHashtags" class="form-control" placeholder="Add hashtags...">
                                    </div>
                                    <div>
                                        <span class="text-muted">Begin each hashtag with a '#' character, separate them with commas (',').</span>
                                    </div>
                                    <div class="card mx-md-0 mx-3 my-3">
                                        <div class="card-body">
                                            <strong><a href="<%= `/users/${sharedPost.user.username}` %>" class="text-secondary"><%= sharedPost.user.fullName %></a></strong>
                                            <div>
                                                <%= 
                                                sharedPost.createdAt.toLocaleString(
                                                    'en-US',
                                                    {
                                                        year: 'numeric',
                                                        month: 'long',
                                                        day: 'numeric',
                                                        hour: '2-digit',
                                                        minute: '2-digit',
                                                        hour12: true
                                                    }
                                                ) 
                                                %>
                                            </div>
                                            <p class="card-text">
                                                <%= sharedPost.postText %>
                                            </p>
                                            <div class="my-1">
                                                <% sharedPost.hashtags.forEach(hashtag => { %>
                                                    <a href="<%= `/hashtags/${hashtag}` %>" class="btn btn-outline-secondary btn-sm btn-pill" role="button">#<%= hashtag %></a>
                                                <% }); %>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <button class="btn btn-outline-primary" type="submit">Share</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>