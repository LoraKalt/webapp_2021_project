    <main>
        <div class="fluid-container">
            <div class="row mx-auto">
                <div class="col-xl-2">
                    <!-- Left column, empty for now -->
                </div>
                <div class="col-xl-8">
                    <% if (loggedIn) {%>
                        <div class="card mx-md-0 mx-3 my-3">
                            <div class="card-body">
                                <form action="/posts/create" method="POST" id="newPostForm">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="postText" id="txtPostText" placeholder="Share something with the world...">
                                        <button class="btn btn-outline-primary" type="submit">Post</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    <% } %>
                    <% posts.forEach(post => { %>
                        <div class="card mx-md-0 mx-3 my-3">
                            <div class="row card-body">
                                <div class="col-xl-10">
                                    <strong><a href="<%= `/users/${post.user.username}` %>" class="text-secondary"><%= post.user.fullName %></a></strong>
                                    <button type="button" class="btn btn-outline-primary btn-sm">Follow</button>
                                    <div>
                                        <%= 
                                        post.createdAt.toLocaleString(
                                            'en-US',
                                            {
                                                year: 'numeric',
                                                month: 'long',
                                                day: 'numeric',
                                                hour: '2-digit',
                                                minute: '2-digit',
                                                hour12: true
                                            }
                                        ) 
                                        %>
                                    </div>
                                    <p class="card-text">
                                        <%= post.postText %>
                                    </p>
                                    <div>
                                        <span class="text-secondary">0 people like this</span>
                                    </div>
                                    <button type="button" class="btn btn-primary btn-sm">Like</button>
                                    <button type="button" class="btn btn-secondary btn-sm">Share</button>
                                    <div class="my-1">
                                        <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">#lorem</button>
                                        <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">#ipsum</button>
                                    </div>
                                    <h5>Comments</h5>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="What do you think?">
                                        <button class="btn btn-outline-primary" type="button">Reply</button>
                                    </div>
                                    <div class="mx-3">
                                        <!-- Comments go here later -->
                                    </div>
                                </div>
                                <div class="col-xl-2">
                                    <% if (loggedIn && currentUser.username === post.user.username) {%>
                                        <a 
                                            class="btn btn-danger"
                                            href="<%= `/posts/${post._id}/delete?_method=DELETE` %>"
                                            role="button"
                                        >Delete</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <div class="col-xl-2">
                    <div class="card mx-md-0 mx-3 my-3">
                        <div class="card-body">
                            <h5>Trending</h5>
                            <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">#lorem</button>
                            <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">#ipsum</button>
                            <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">#chicago</button>
                            <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">#photograpy</button>
                            <button class="btn btn-outline-secondary btn-sm btn-pill" type="button">#itookaphoto</button>
                        </div>
                    </div>
                    <div class="card mx-md-0 mx-3 my-3">
                        <div class="card-body">
                            <h5>Who to follow</h5>
                            <% users.forEach(user => { %>
                                <div class="d-flex justify-content-between mb-1">
                                    <strong><a href="<%=`/users/${user.username}`%>" class="text-secondary"><%= user.fullName %></a></strong>
                                    <button type="button" class="btn btn-outline-primary btn-sm">Follow</button>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>