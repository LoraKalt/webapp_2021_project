<main>
    <article>
        <div class="container">
            <div class="card mx-md-5 mx-3 my-3 p-3">
                <div class="w-auto">
                    <h5>Edit Profile: @<%= currentUser.username %> </h5>
                </div>
                <form action="/profile/update" method="POST" onsubmit="" id="signUpForm" novalidate>
                    <!--REQUIRED INFORMATION GROUP-->
                    <!--first name (required)-->
                    <div class="input-group">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Name: </span>
                        </div>
                        <input type="text" id="txtFirstName" name="fname" class="form-control char-check
                        <% if(errorFields.includes("fname")) { %> is-invalid <% } %>"
                            value="<%= currentUser.fname %>" required>
                        <input type="text" id="txtLastName" name="lname" class="form-control char-check
                        <% if(errorFields.includes("lname")) { %> is-invalid <% } %>"
                            value="<%= currentUser.lname %>" required>
                    </div>
                    <div id="divErrorName" class="err-msg text-danger invisible"></div>

                    <!--Email (required)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Email: </span>
                        </div>
                        <input type="email" id="txtEmail" name="email" class="form-control char-check
                        <% if(errorFields.includes("email")) { %> is-invalid <% } %>"
                            value="<%= currentUser.email %>" required>
                    </div>
                    <div id="divEmailErr" class="err-msg text-danger invisible"></div>

                    <!--Password -->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Password:</span>
                        </div>
                        <a class="btn btn-primary" href="/profile/changepassword" role="button">Change Password</a>
                    </div>

                    <!--Security Question (Required)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Security Question:</span>
                        </div>
                        <select id="cbSecurity" name="securityQ" class="inputState form-control 
                            <% if(errorFields.includes("securityQ")) { %> is-invalid <% } %>" required
                        >
                            <option disabled value="">Pick a Security Question</option>
                            <option
                                value="favColor"
                                <%= currentUser.securityQ === "favColor" ? "selected" : "" %>
                            >What's your favorite color?</option>
                            <option
                                value="firstPet"
                                <%= currentUser.securityQ === "firstPet" ? "selected" : "" %>
                            >What was the name of your first pet?</option>
                            <option
                                value="firstCar"
                                <%= currentUser.securityQ === "firstCar" ? "selected" : "" %>
                            >What was your first car?</option>
                        </select>
                    </div>
                    <!--Security Answer (required)-->
                    <div id="divSecurityAnswer" class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Security Answer:</span>
                        </div>
                        <input type="text" id="txtAnswer" name="securityQAnswer" class="form-control char-check
                        <% if(errorFields.includes("securityQAnswer")) { %> is-invalid <% } %>"
                            value="<%= currentUser.securityQAnswer %>" required>
                    </div>
                    <div id="divSecurityErr" class="err-msg text-danger invisible"></div>

                    <!--DOB (required)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Date of Birth:</span>
                        </div>
                        <input type="date" id="txtDoB" name="dateOfBirth" class="form-control
                            <% if(errorFields.includes("dateOfBirth")) { %> is-invalid <% } %>" required
                            value="<%= currentUser.dateOfBirth %>"
                        >
                    </div>
                    <div id="divDoBError" class="text-danger invisible"></div>
                    <!--BIOGRAPHY INFORMATION GROUP-->
                    <!--Gender (optional)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Gender (optional):</span>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input type="radio" id="rbMale" name="gender" value="male" class="form-check-input
                                    <% if(errorFields.includes("gender")) { %> is-invalid <% } %>"
                                    <% if(currentUser.gender === "male") { %>checked="checked"<% } %>
                                >
                                <label for="rbMale" class="form-check-label">Male</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" id="rbFemale" name="gender" value="female" class="form-check-input 
                                    <% if(errorFields.includes("gender")) { %> is-invalid <% } %>"
                                    <% if(currentUser.gender === "female") { %>checked="checked"<% } %>
                                >
                                <label for="rbFemale" class="form-check-label">Female</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" id="rbOther" name="gender" value="other" class="form-check-input
                                    <% if(errorFields.includes("gender")) { %> is-invalid <% } %>"
                                    <% if(currentUser.gender === "other") { %>checked="checked"<% } %>
                                >
                                <label for="rbOther" class="form-check-label">Other</label>
                            </div>

                        </div>
                    </div>

                    <!--Location (optional)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Location (optional):</span>
                        </div>
                        <input type="text" id="txtLocation" name="location" class="form-control char-check
                        <% if(errorFields.includes("location")) { %> is-invalid <% } %>"
                        value="<%= currentUser.location %>">
                    </div>
                    <div id="divErrorLocation" class="err-msg text-danger invisible"></div>

                    <!--Bio (Optional)-->
                    <div class="input-group mt-3 mb-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Bio (optional):</span>
                        </div>
                        <textarea id="txtareaBio" name="bio" class="form-control char-check
                            <% if(errorFields.includes("bio")) { %> is-invalid <% } %>"
                        ><%= currentUser.bio %></textarea>
                    </div>
                    <div id="divErrorBio" class="err-msg text-danger invisible"></div>


                    <!--Submit Button-->
                    <!--Reset Button-->
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <div id="divSubmitError" class="text-danger invisible">Error: One or more inputs are invalid</div>
                        <% if(typeof error != "undefined") { %>
                            <div id="serverSideError" class="text-danger">
                                <%- error %>
                            </div>
                        <% } %>
                    </div>
                </form>
            </div>
            <div class="card mx-md-5 mx-3 my-3 p-3">
                <h5>Delete User:</h5>
                <div class="input-group mt-3">
                    <a 
                        class="btn btn-danger"
                        href="/profile/delete?_method=DELETE"
                        role="button"
                        onclick="return confirm('Are you sure you want to permanently delete your account?')"
                    >Delete your account forever</a>
                </div>
            </div>
        </div>
    </article>
</main>
<script src="/js/script.js"></script>