<main>
    <article>
        <div class="container">
            <div class="card mx-md-5 mx-3 my-3 p-3">
                <div class="w-auto">
                    <h5>Sign In</h5>
                </div>
                <form action="/login" method="POST" onsubmit="return validateSignIn()" id="signinForm" novalidate>
                    <fieldset>
                        <!--Email-->
                        <div class="input-group">
                            <div class="label-tag input-group-prepend">
                                <span class="input-group-text">Email:</span>
                            </div>
                            <input type="email" id="txtSignEmail" name="email" class="form-control"
                                placeholder="name@example.com" required>
                        </div>
                        <div id="divEmailError" class="text-danger invisible"></div>

                        <!--Password (required)-->
                        <div class="input-group mt-3">
                            <div class="label-tag input-group-prepend">
                                <span class="input-group-text">Password</span>
                            </div>
                            <input type="password" id="txtSignPassword" name="password" class="form-control"
                                required>
                        </div>
                        <div id="divPasswordError" class="text-danger invisible"></div>
                        <!--Submit Buttons-->
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">Sign In</button>
                            <button type="reset" class="btn btn-secondary" onclick="clearErrorMsgs()">Reset</button>
                        </div>
                    </fieldset>
                </form>
                <div class="mx-auto">
                    <a class="btn btn-light" href="/signup">New User? Join CU-Denver Social</a>
                </div>
                
            </div>
        </div>
    </article>
</main>
<script src="./js/script.js"></script>