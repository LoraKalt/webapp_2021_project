<main>
    <article>
        <div class="container">
            <div class="card mx-md-5 mx-3 my-3 p-3">
                <div class="w-auto">
                    <h5>Change Password: @<%= currentUser.username %> </h5>
                </div>
                <form action="/profile/changepassword" method="POST" onsubmit="return validatePssdChange()" id="signUpForm" novalidate>
                    <!--Password (required)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Old Password:</span>
                        </div>
                        <input type="password" id="txtOldPassword" name="oldpassword" class="form-control char-check
                        <% if(errorFields.includes("oldpassword")) { %> is-invalid <% } %>"
                            required>
                    </div>
                    <div id="divOldPasswordErr" class="err-msg text-danger invisible"></div>
                    <!--Password (required)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">New Password:</span>
                        </div>
                        <input type="password" id="txtPassword" name="newpassword" class="form-control char-check
                        <% if(errorFields.includes("password")) { %> is-invalid <% } %>"
                            required>
                    </div>
                    <div id="divPasswordErr" class="err-msg text-danger invisible"></div>

                    <!--Confirm password (required)-->
                    <div class="input-group mt-3">
                        <div class="label-tag input-group-prepend">
                            <span class="input-group-text">Confirm New Password:</span>
                        </div>
                        <input type="password" id="confirmpassword" name="confirmpassword"
                            class="form-control char-check
                            <% if(errorFields.includes("confirmpassword")) { %> is-invalid <% } %>" required>
                    </div>
                    <div id="divPasswordErr2" class="err-msg text-danger invisible"></div>

                    <!--Submit Button-->
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <div id="divSubmitError" class="text-danger invisible">Error: One or more inputs are invalid</div>
                        <% if(typeof error != "undefined") { %>
                            <div id="serverSideError" class="text-danger">
                                <%- error %>
                            </div>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </article>
</main>
<script src="/js/script.js"></script>